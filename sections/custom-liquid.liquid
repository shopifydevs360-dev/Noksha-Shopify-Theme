{% render 'section-base-style' %}

{% liquid
  assign ss = section.settings

  assign section_classes = 'custom-liquid-section '
  assign section_classes = section_classes | append: 'm-color-' | append: ss.color_scheme
  assign section_classes = section_classes | append: ' ' | append: ss.color_control
  assign section_classes = section_classes | append: ' ' | append: ss.custom_class
  assign section_classes = section_classes | append: ' section-' | append: section.id | append: '-padding'

  assign container_width = ss.container_width
%}

<div class="{{ section_classes }}" id="custom-liquid-{{ section.id }}">
  <div class="{{ container_width }}">
    <div class="custom-liquid-wrapper rte">
      {{ ss.custom_liquid }}
    </div>
  </div>
</div>

{% stylesheet %}
.custom-liquid-wrapper {
  width: 100%;
}
{% endstylesheet %}

{% schema %}
{
  "name": "Custom Liquid",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "header",
      "content": "Content"
    },
    {
      "type": "liquid",
      "id": "custom_liquid",
      "label": "Custom Liquid",
      "info": "Add custom Liquid, HTML, or embed code here."
    },

    {
      "type": "header",
      "content": "Layout"
    },
    { "type": "checkbox", "id": "enable_sidebar_space", "label": "Enable sidebar space", "default": true },
    {
      "type": "select",
      "id": "container_width",
      "label": "Container width",
      "options": [
        { "value": "container", "label": "Container" },
        { "value": "container-fluid", "label": "Container fluid" },
        { "value": "container-narrow", "label": "Container narrow" },
        { "value": "container-extra-narrow", "label": "Container extra narrow" },
        { "value": "full-width", "label": "Full width" },
        { "value": "extended", "label": "Extended" }
      ],
      "default": "container"
    },

    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "Color scheme"
    },
    {
      "type": "select",
      "id": "color_control",
      "label": "Color Control",
      "options": [
        { "value": "section-light", "label": "Light" },
        { "value": "section-dark", "label": "Dark" }
      ],
      "default": "section-light"
    },

    {
      "type": "header",
      "content": "Section padding"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Top padding",
      "default": 40
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Bottom padding",
      "default": 40
    },

    {
      "type": "text",
      "id": "custom_class",
      "label": "Custom class"
    }
  ],
  "presets": [
    {
      "name": "Custom Liquid"
    }
  ]
}
{% endschema %}
