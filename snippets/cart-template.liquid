{{ 'cart-template.css' | asset_url | stylesheet_tag }}

{% assign free_shipping_threshold = 10000 %}

<div
  class="cart-template"
  data-cart-root
  data-free-shipping-threshold="{{ free_shipping_threshold }}"
>
  <div class="container">
    <form action="{{ routes.cart_url }}" method="post" novalidate>
      <div class="cart-template__inner">

        <!-- LEFT -->
        <div class="cart-template-left">

          <h4 class="cart-title">Your Bag</h4>

          <!-- FREE SHIPPING -->
          <div class="cart-shipping-wrapper">

            {% assign remaining = free_shipping_threshold | minus: cart.total_price %}
            {% assign progress = cart.total_price | times: 100 | divided_by: free_shipping_threshold %}
            {% if progress > 100 %}{% assign progress = 100 %}{% endif %}

            <p class="cart-shipping-text cart-shipping-default">
              You are
              <span class="cart-shipping-remaining">
                {{ remaining | money }}
              </span>
              away from free shipping
            </p>

            <p class="cart-shipping-text cart-shipping-success">
              ðŸŽ‰ Youâ€™ve unlocked free shipping!
            </p>

            <div class="shipping-progress">
              <div
                class="shipping-progress-bar"
                style="width: {{ progress }}%;"
              ></div>
            </div>

          </div>

          <!-- ITEMS -->
          {% if cart.item_count > 0 %}
            <div class="cart-list-items">
              {% for item in cart.items %}
                <div class="cart-item" data-key="{{ item.key }}">

                  <div class="cart-item-info">
                    <p class="cart-item-title">{{ item.product.title }}</p>

                    <div class="cart-item-qty">
                      <button type="button" class="qty-btn qty-minus">âˆ’</button>
                      <input type="number" value="{{ item.quantity }}" min="1">
                      <button type="button" class="qty-btn qty-plus">+</button>
                    </div>
                  </div>

                  <div class="cart-item-meta">
                    <p class="cart-item-price">{{ item.final_line_price | money }}</p>
                    <button type="button" class="cart-item-remove">Remove</button>
                  </div>

                </div>
              {% endfor %}
            </div>
          {% else %}
            <p>Your cart is empty.</p>
          {% endif %}

        </div>

        <!-- RIGHT -->
        <div class="cart-template-right">

          <h4>Order Summary</h4>

          <div class="cart-summary-row">
            <span>Subtotal</span>
            <span class="cart-subtotal">
              {{ cart.items_subtotal_price | money }}
            </span>
          </div>

          <button type="submit" name="checkout" class="cart-checkout-btn">
            Checkout
          </button>

          <p class="cart-note">
            Shipping and taxes calculated at checkout.
          </p>

        </div>

      </div>
    </form>
  </div>
</div>

<script src="{{ 'cart-template.js' | asset_url }}" defer></script>
