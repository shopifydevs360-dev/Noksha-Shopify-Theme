{% doc %}
  Renders a responsive column grid layout.
{% enddoc %}

<div 
  class="layout-column column-{{ block.settings.columns }} {% if block.settings.show_two_mobile %}column-mobile-2{% endif %}"
  style="
    padding: {{ block.settings.padding }}px;
    --column-gap: {{ block.settings.column_gap }}px;
    --align-items: {{ block.settings.align_items }};
    --justify-content: {{ block.settings.justify_content }};
  "
  {{ block.shopify_attributes }}
>
  {% content_for 'blocks' %}
</div>

{% style %}

/* ------------------------------
   Base Grid
------------------------------- */
.layout-column {
  display: grid;
  grid-template-columns: repeat(var(--column, 1), 1fr);
  gap: var(--column-gap, 20px);
  align-items: var(--align-items, stretch);
  justify-content: var(--justify-content, flex-start);
}

/* ------------------------------
   Column Numbers
------------------------------- */
.column-2 { --column: 2; }
.column-3 { --column: 3; }
.column-4 { --column: 4; }
.column-5 { --column: 5; }
.column-6 { --column: 6; }

/* Default */
.layout-column { --column: 1; }

/* ------------------------------
   Mobile Override
------------------------------- */
.column-mobile-2 {
  --column: 2;
}

/* ------------------------------
   Responsive Breakpoints
------------------------------- */
@media (min-width: 768px) {
  .layout-column {
    grid-template-columns: repeat(var(--column), 1fr);
  }
}

{% endstyle %}

{% schema %}
{
  "name": "Column Layout",
  "blocks": [{ "type": "content-card" }],
  "settings": [
    {
      "type": "select",
      "id": "columns",
      "label": "Columns",
      "options": [
        { "value": "2", "label": "2" },
        { "value": "3", "label": "3" },
        { "value": "4", "label": "4" },
        { "value": "5", "label": "5" },
        { "value": "6", "label": "6" }
      ],
      "default": "4"
    },
    {
      "type": "checkbox",
      "id": "show_two_mobile",
      "label": "Show 2 columns on mobile",
      "default": false
    },
    {
      "type": "range",
      "id": "column_gap",
      "label": "Column Gap",
      "min": 0,
      "max": 50,
      "step": 5,
      "unit": "px",
      "default": 10
    },
    {
      "type": "select",
      "id": "align_items",
      "label": "Align items",
      "default": "stretch",
      "options": [
        { "value": "flex-start", "label": "Start" },
        { "value": "center", "label": "Center" },
        { "value": "flex-end", "label": "End" },
        { "value": "stretch", "label": "Stretch" }
      ]
    },
    {
      "type": "select",
      "id": "justify_content",
      "label": "Justify content",
      "default": "flex-start",
      "options": [
        { "value": "flex-start", "label": "Start" },
        { "value": "center", "label": "Center" },
        { "value": "flex-end", "label": "End" },
        { "value": "space-between", "label": "Space between" }
      ]
    },
    {
      "type": "range",
      "id": "padding",
      "label": "Padding",
      "default": 0,
      "min": 0,
      "max": 200,
      "step": 2,
      "unit": "px"
    }
  ],
  "presets": [
    {
      "name": "Column Layout",
      "category": "Layout"
    }
  ]
}
{% endschema %}
