{% doc %}
  Renders a vertical column container for nested blocks.
{% enddoc %}

<div
  class="layout-column"
  style="
    --column-align: {{ block.settings.align_items }};
    --column-justify: {{ block.settings.justify_content }};
    --column-gap: {{ block.settings.gap }}px;
    --column-padding: {{ block.settings.padding }}px;
    --column-width: {{ block.settings.width }};
  "
  {{ block.shopify_attributes }}
>
  {% content_for 'blocks' %}
</div>

{% stylesheet %}
.layout-column {
  display: flex;
  flex-direction: column;
  width: var(--column-width);
  align-items: var(--column-align);
  justify-content: var(--column-justify);
  gap: var(--column-gap);
  padding: var(--column-padding);
  box-sizing: border-box;
  min-width: 0;
}
{% endstylesheet %}

{% schema %}
{
  "name": "Column",
  "blocks": [{ "type": "@theme" }],
  "settings": [
    {
      "type": "select",
      "id": "width",
      "label": "Column width",
      "default": "auto",
      "options": [
        { "value": "auto", "label": "Auto" },
        { "value": "100%", "label": "100%" },
        { "value": "50%", "label": "50%" },
        { "value": "33.333%", "label": "33%" },
        { "value": "25%", "label": "25%" }
      ]
    },
    {
      "type": "select",
      "id": "align_items",
      "label": "Horizontal alignment",
      "default": "flex-start",
      "options": [
        { "value": "flex-start", "label": "Start" },
        { "value": "center", "label": "Center" },
        { "value": "flex-end", "label": "End" },
        { "value": "stretch", "label": "Stretch" }
      ]
    },
    {
      "type": "select",
      "id": "justify_content",
      "label": "Vertical alignment",
      "default": "flex-start",
      "options": [
        { "value": "flex-start", "label": "Start" },
        { "value": "center", "label": "Center" },
        { "value": "flex-end", "label": "End" },
        { "value": "space-between", "label": "Space between" }
      ]
    },
    {
      "type": "range",
      "id": "gap",
      "label": "Item gap",
      "min": 0,
      "max": 100,
      "step": 2,
      "unit": "px",
      "default": 20
    },
    {
      "type": "range",
      "id": "padding",
      "label": "Padding",
      "min": 0,
      "max": 200,
      "step": 2,
      "unit": "px",
      "default": 0
    }
  ],
  "presets": [
    {
      "name": "Column",
      "category": "Layout"
    }
  ]
}
{% endschema %}
