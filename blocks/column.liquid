{% doc %}
  Renders a vertical stack of blocks (column layout).
  @example
  {% content_for 'block', type: 'column', id: 'column' %}
{% enddoc %}

<div class="layout-column cols-4"
  style="
    align-items: {{ block.settings.align_items }};
    justify-content: {{ block.settings.justify_content }};
    padding: {{ block.settings.padding }}px;"{{ block.shopify_attributes }}>
  {% content_for 'blocks' %}
</div>

{% stylesheet %}

{% endstylesheet %}

{% schema %}
{
  "name": "Column Layout",
  "blocks": [{ "type": "content-card" }],
  "settings": [
    {
      "type": "select",
      "id": "align_items",
      "label": "Align items",
      "default": "flex-start",
      "options": [
        { "value": "flex-start", "label": "Start" },
        { "value": "center", "label": "Center" },
        { "value": "flex-end", "label": "End" },
        { "value": "stretch", "label": "Stretch" }
      ]
    },
    {
      "type": "select",
      "id": "justify_content",
      "label": "Justify content",
      "default": "flex-start",
      "options": [
        { "value": "flex-start", "label": "Start" },
        { "value": "center", "label": "Center" },
        { "value": "flex-end", "label": "End" },
        { "value": "space-between", "label": "Space between" }
      ]
    },
    {
      "type": "range",
      "id": "gap",
      "label": "Gap between items",
      "default": 20,
      "min": 0,
      "max": 100,
      "step": 2,
      "unit": "px"
    },
    {
      "type": "range",
      "id": "padding",
      "label": "Padding",
      "default": 0,
      "min": 0,
      "max": 200,
      "step": 2,
      "unit": "px"
    }
  ],
  "presets": [
    {
      "name": "Column Layout",
      "category": "Layout"
    }
  ]
}
{% endschema %}
