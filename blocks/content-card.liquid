{% doc %}
  A content wrapper that constrains width and applies consistent padding.
  @example
  {% content_for 'row', type: 'content-card', id: 'content-card' %}
{% enddoc %}

<div
  class="content-area"
  style="
    max-width: {{ block.settings.max_width }}px;
    margin: 0 auto;
    padding: {{ block.settings.padding }}px;
  "
  {{ block.shopify_attributes }}
>
  {% content_for 'blocks' %}
</div>

{% stylesheet %}
  .content-area {
    width: 100%;
  }
{% endstylesheet %}

{% schema %}
{
  "name": "Content Area",
    "blocks": [
    { "type": "text" },
    { "type": "image" },
    { "type": "richtext" },
    { "type": "button" },
    { "type": "row" },
  ],
  "settings": [
    {
      "type": "range",
      "id": "max_width",
      "label": "Max width",
      "default": 1200,
      "min": 600,
      "max": 2000,
      "step": 20,
      "unit": "px"
    },
    {
      "type": "range",
      "id": "padding",
      "label": "Padding",
      "default": 40,
      "min": 0,
      "max": 200,
      "step": 2,
      "unit": "px"
    }
  ],
  "presets": [
    {
      "name": "Content Card",
      "category": "Layout"
    }
  ]
}
{% endschema %}
