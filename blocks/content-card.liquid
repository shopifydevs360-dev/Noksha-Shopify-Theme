{% doc %}
  Advanced Content Card Wrapper
{% enddoc %}

{% assign bg_type = block.settings.background_type %}

<div 
  class="content-card"
  style="
    padding: {{ block.settings.padding }}px;

    {% if bg_type == 'solid' %}
      background: {{ block.settings.background_color }};
    {% elsif bg_type == 'gradient' %}
      background: linear-gradient(
        {{ block.settings.gradient_direction }},
        {{ block.settings.gradient_color_1 }},
        {{ block.settings.gradient_color_2 }}
      );
    {% endif %}

    {% if block.settings.enable_max_width %}
      max-width: {{ block.settings.max_width_value }}{{ block.settings.max_width_unit }};
      margin-left: auto;
      margin-right: auto;
    {% endif %}

    border-radius: {{ block.settings.border_radius }}px;

    {% if block.settings.border_width > 0 %}
      border: {{ block.settings.border_width }}px solid {{ block.settings.border_color }};
    {% endif %}

    {% if block.settings.enable_shadow %}
      box-shadow: 0 {{ block.settings.shadow_y }}px {{ block.settings.shadow_blur }}px rgba(0,0,0,0.15);
    {% endif %}
  "
  {{ block.shopify_attributes }}
>
  {% content_for 'blocks' %}
</div>


{% style %}
.content-card-block {
  display: contents;
}

.content-card {
  width: 100%;
  transition: all 0.3s ease;
}

{% endstyle %}
{% schema %}
{
  "name": "Advanced Content Card",
  "class": "content-card-block",
  "blocks": [
    { "type": "text" },
    { "type": "richtext" },
    { "type": "image" },
    { "type": "button" },
    { "type": "promo" },
    { "type": "newsletter" }
  ],
  "settings": [

    {
      "type": "range",
      "id": "padding",
      "label": "Padding",
      "default": 40,
      "min": 0,
      "max": 200,
      "step": 2,
      "unit": "px"
    },

    {
      "type": "select",
      "id": "background_type",
      "label": "Background type",
      "default": "solid",
      "options": [
        { "value": "none", "label": "None" },
        { "value": "solid", "label": "Solid color" },
        { "value": "gradient", "label": "Gradient" }
      ]
    },

    {
      "type": "color",
      "id": "background_color",
      "label": "Background color",
      "default": "#ffffff",
      "visible_if": "{{ block.settings.background_type == 'solid' }}"
    },

    {
      "type": "color",
      "id": "gradient_color_1",
      "label": "Gradient start",
      "default": "#ffffff",
      "visible_if": "{{ block.settings.background_type == 'gradient' }}"
    },
    {
      "type": "color",
      "id": "gradient_color_2",
      "label": "Gradient end",
      "default": "#f5f5f5",
      "visible_if": "{{ block.settings.background_type == 'gradient' }}"
    },
    {
      "type": "select",
      "id": "gradient_direction",
      "label": "Gradient direction",
      "default": "to right",
      "options": [
        { "value": "to right", "label": "Left → Right" },
        { "value": "to left", "label": "Right → Left" },
        { "value": "to bottom", "label": "Top → Bottom" },
        { "value": "to top", "label": "Bottom → Top" }
      ],
      "visible_if": "{{ block.settings.background_type == 'gradient' }}"
    },

    {
      "type": "checkbox",
      "id": "enable_max_width",
      "label": "Limit max width",
      "default": false
    },
    {
      "type": "number",
      "id": "max_width_value",
      "label": "Max width value",
      "default": 800,
      "visible_if": "{{ block.settings.enable_max_width }}"
    },

    {
      "type": "select",
      "id": "max_width_unit",
      "label": "Max width unit",
      "default": "px",
      "options": [
        { "value": "px", "label": "Pixels (px)" },
        { "value": "%", "label": "Percentage (%)" }
      ],
      "visible_if": "{{ block.settings.enable_max_width }}"
    },

    {
      "type": "range",
      "id": "border_radius",
      "label": "Border radius",
      "default": 0,
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px"
    },

    {
      "type": "range",
      "id": "border_width",
      "label": "Border width",
      "default": 0,
      "min": 0,
      "max": 10,
      "step": 1,
      "unit": "px"
    },
    {
      "type": "color",
      "id": "border_color",
      "label": "Border color",
      "default": "#000000",
      "visible_if": "{{ block.settings.border_width > 0 }}"
    },

    {
      "type": "checkbox",
      "id": "enable_shadow",
      "label": "Enable shadow",
      "default": false
    },
    {
      "type": "range",
      "id": "shadow_y",
      "label": "Shadow vertical offset",
      "default": 10,
      "min": 0,
      "max": 50,
      "step": 1,
      "unit": "px",
      "visible_if": "{{ block.settings.enable_shadow }}"
    },
    {
      "type": "range",
      "id": "shadow_blur",
      "label": "Shadow blur",
      "default": 30,
      "min": 0,
      "max": 100,
      "step": 2,
      "unit": "px",
      "visible_if": "{{ block.settings.enable_shadow }}"
    }

  ],
  "presets": [
    {
      "name": "Advanced Content Card",
      "category": "Layout"
    }
  ]
}
{% endschema %}
