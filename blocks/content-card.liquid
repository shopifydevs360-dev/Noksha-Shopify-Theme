{% doc %}
  A content wrapper that constrains width and applies consistent padding.
  @example
  {% content_for 'row', type: 'content-card', id: 'content-card' %}
{% enddoc %}

<div
  class="content-area"
  style="
    max-width: {{ block.settings.block_width }}px;
    margin: 0 auto;
    padding: {{ block.settings.padding }}px;
  "
  {{ block.shopify_attributes }}
>
  {% content_for 'blocks' %}
</div>

{% stylesheet %}
  .content-area {
    width: 100%;
  }
{% endstylesheet %}

{% schema %}
{
  "name": "Content Area",
    "blocks": [
    { "type": "text" },
    { "type": "richtext" },
    { "type": "image" },
    { "type": "button" },
    { "type": "row" },
    { "type": "promo" },
    { "type": "newsletter" },
  ],
  "settings": [
    { 
       "type": "select", 
       "id": "block_width", 
       "label": "Block width", 
       "options": [
           { "value": "10", "label": "10%" },
           { "value": "15", "label": "15%" },
           { "value": "20", "label": "20%" },
           { "value": "25", "label": "25%" },
           { "value": "33", "label": "33%" },
           { "value": "40", "label": "40%" },
           { "value": "45", "label": "45%" },
           { "value": "50", "label": "50%" }
           ], 
       "default": "33" },
    {
      "type": "range",
      "id": "padding",
      "label": "Padding",
      "default": 40,
      "min": 0,
      "max": 200,
      "step": 2,
      "unit": "px"
    }
  ],
  "presets": [
    {
      "name": "Content Card",
      "category": "Layout"
    }
  ]
}
{% endschema %}
