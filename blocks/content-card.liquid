{% doc %}
  Advanced Content Card Wrapper
{% enddoc %}

{% assign bg_type = block.settings.background_type %}

<div 
  class="content-card"
  style="
    padding: {{ block.settings.padding }}px;

    {% if bg_type == 'solid' %}
      background: {{ block.settings.background_color }};
    {% elsif bg_type == 'gradient' %}
      background: linear-gradient(
        {{ block.settings.gradient_direction }},
        {{ block.settings.gradient_color_1 }},
        {{ block.settings.gradient_color_2 }}
      );
    {% endif %}

    {% if block.settings.enable_max_width %}
      max-width: {{ block.settings.max_width_value }}{{ block.settings.max_width_unit }};
      margin-left: auto;
      margin-right: auto;
    {% endif %}

    border-radius: {{ block.settings.border_radius }}px;

    {% if block.settings.border_width > 0 %}
      border: {{ block.settings.border_width }}px solid {{ block.settings.border_color }};
    {% endif %}

    {% if block.settings.enable_shadow %}
      box-shadow: 0 {{ block.settings.shadow_y }}px {{ block.settings.shadow_blur }}px rgba(0,0,0,0.15);
    {% endif %}
  "
  {{ block.shopify_attributes }}
>
  {% content_for 'blocks' %}
</div>


{% style %}
.content-card-block{
    display: contents;
}
  .content-area{
    width: 100%;
  }
{% endstyle %}

{% schema %}
{
  "name": "Content Area",
    "blocks": [
    { "type": "text" },
    { "type": "richtext" },
    { "type": "image" },
    { "type": "button" },
    { "type": "promo" },
    { "type": "newsletter" },
  ],
  "class": "content-card-block",
  "settings": [
    { 
       "type": "select", 
       "id": "block_width", 
       "label": "Block width", 
       "options": [
           { "value": "10", "label": "10%" },
           { "value": "15", "label": "15%" },
           { "value": "20", "label": "20%" },
           { "value": "25", "label": "25%" },
           { "value": "33", "label": "33%" },
           { "value": "40", "label": "40%" },
           { "value": "45", "label": "45%" },
           { "value": "50", "label": "50%" }
           ], 
       "default": "33" },
    {
      "type": "range",
      "id": "padding",
      "label": "Padding",
      "default": 40,
      "min": 0,
      "max": 200,
      "step": 2,
      "unit": "px"
    }
  ],
  "presets": [
    {
      "name": "Content Card",
      "category": "Layout"
    }
  ]
}
{% endschema %}
