{% doc %}
  Renders a single column inside a Layout Columns row.

  The column width is determined by its span value
  relative to other column items in the same row.

  Example:
  Column A span: 2
  Column B span: 1
  Result: A takes 2/3 width, B takes 1/3 width.
{% enddoc %}

<div
  class="layout-columns__item"
  style="--col-span: {{ block.settings.column_span }};"
  {{ block.shopify_attributes }}
>
  {% content_for 'blocks' %}
</div>

{% schema %}
{
  "name": "Column Item",
  "blocks": [
    {
      "type": "@theme"
    }
  ],
  "settings": [
    {
      "type": "range",
      "id": "column_span",
      "label": "Column span (relative width)",
      "min": 1,
      "max": 6,
      "step": 1,
      "default": 1
    }
  ],
  "presets": [
    {
      "name": "Column Item"
    }
  ]
}
{% endschema %}
