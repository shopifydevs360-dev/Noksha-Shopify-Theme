{% doc %}
  Column item block.
  Controls proportional width using flex grow ratio.
{% enddoc %}

{% content_for 'blocks' %}

{% schema %}
{
  "name": "Column item",
  "blocks": [
    {
      "type": "@theme"
    }
  ],
  "settings": [
    {
      "type": "range",
      "id": "column_span",
      "label": "Column span",
      "min": 1,
      "max": 6,
      "step": 1,
      "default": 1
    }
  ],
  "presets": [
    {
      "name": "Column item"
    }
  ]
}
{% endschema %}
