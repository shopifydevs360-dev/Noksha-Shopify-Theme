{% doc %}
  Renders an image block using the shared image snippet
  for optimal performance and responsive behavior.
{% enddoc %}

{% if block.settings.image != blank %}
  <div
    class="block-image"
    style="--image-align: {{ block.settings.alignment }}"
    {{ block.shopify_attributes }}
  >
    {% render 'image',
      class: 'block-image__media',
      image: block.settings.image,
      mobile_image: block.settings.image_mobile,
      url: block.settings.link,
      width: block.settings.image.width,
      height: block.settings.image.height,
      img_alt: block.settings.alt_text
    %}
  </div>
{% endif %}

{% stylesheet %}
.block-image {
  display: flex;
  justify-content: var(--image-align);
}

.block-image__media {
  max-width: 100%;
}
{% endstylesheet %}

{% schema %}
{
  "name": "Image",
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    },
    {
      "type": "image_picker",
      "id": "image_mobile",
      "label": "Mobile image"
    },
    {
      "type": "url",
      "id": "link",
      "label": "Link"
    },
    {
      "type": "text",
      "id": "alt_text",
      "label": "Alt text"
    },
    {
      "type": "select",
      "id": "alignment",
      "label": "Alignment",
      "default": "center",
      "options": [
        { "value": "flex-start", "label": "Left" },
        { "value": "center", "label": "Center" },
        { "value": "flex-end", "label": "Right" }
      ]
    }
  ],
  "presets": [
    { "name": "Image" }
  ]
}
{% endschema %}
