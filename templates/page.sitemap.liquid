{% render 'section-base-style' %}

<div class="sitemap-page section-{{ section.id }}-padding">
  <div class="container">

    <h1 class="h1 text-center">Sitemap</h1>

    <div class="sitemap-grid d-flex flex-column flex-row-lg">

      <!-- Pages -->
      <div class="sitemap-column flex-grow">
        <h3>Pages</h3>
        <ul>
          {% for page in pages %}
            <li>
              <a href="{{ page.url }}">{{ page.title }}</a>
            </li>
          {% endfor %}
        </ul>
      </div>

      <!-- Collections -->
      <div class="sitemap-column flex-grow">
        <h3>Collections</h3>
        <ul>
          {% for collection in collections %}
            <li>
              <a href="{{ collection.url }}">{{ collection.title }}</a>
            </li>
          {% endfor %}
        </ul>
      </div>

      <!-- Products -->
      <div class="sitemap-column flex-grow">
        <h3>Products</h3>
        <ul>
          {% paginate collections.all.products by 1000 %}
            {% for product in collections.all.products %}
              <li>
                <a href="{{ product.url }}">{{ product.title }}</a>
              </li>
            {% endfor %}
          {% endpaginate %}
        </ul>
      </div>

      <!-- Blogs -->
      <div class="sitemap-column flex-grow">
        <h3>Blogs</h3>
        <ul>
          {% for blog in blogs %}
            <li>
              <a href="{{ blog.url }}">{{ blog.title }}</a>
            </li>
          {% endfor %}
        </ul>
      </div>

    </div>

  </div>
</div>

<style>
.sitemap-page {
  padding: 60px 0;
}

.sitemap-grid {
  gap: 40px;
  margin-top: 40px;
}

.sitemap-column h3 {
  margin-bottom: 15px;
}

.sitemap-column ul {
  list-style: none;
  padding: 0;
}

.sitemap-column li {
  margin-bottom: 8px;
}

.sitemap-column a {
  text-decoration: none;
}
</style>
